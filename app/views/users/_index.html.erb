<table class="table">
  <% users.each do |user| %>
    <div class="card mb-2">
      <div class="card-body">
        <div class='row'>
          <div class="col-md-1">
            <%= image_tag user.avatar.url, class: 'rounded-circle', size: '50x50' %>
          </div>
          <div class="col-md-3">
            <h5 class="text-left fw-bold pt-2"><%= user.name %></h5>
          </div>
          <div class="col-md-2 fw-bold col-sm-6">
            <p class="text-center pt-2"><%= t('relationships.follow') %> : <%= user.followings.count %></p>
          </div>
          <div class="col-md-2 fw-bold col-sm-6">
            <p class="text-center pt-2"><%= t('relationships.follower') %> : <%= user.followers.count %></p>
          </div>
          <div class="col-md-2 col-sm-6">
            <p class="text-center"><%= render "relationships/follow_btn", user: user, options: { class: "" } %></p>
          </div>
          <div class="col-md-2 col-sm-6">
            <p class="text-center"><%= link_to t('users.show.title'), user_path(user), class: 'btn btn-primary rounded-pill' %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</table>