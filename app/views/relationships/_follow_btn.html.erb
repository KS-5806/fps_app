<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), data: { turbo_method: :delete }, class: options[:class].presence || "btn btn-danger rounded-pill" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), data: { turbo_method: :post }, class: options[:class].presence || "btn btn-success rounded-pill" %>
  <% end %>
<% end %>