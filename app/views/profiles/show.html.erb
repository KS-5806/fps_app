<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="col-md-10">
    <h1 class="float-left mb-2"><%= t('.title') %></h1>
  </div>
  <div class="row">
    <div class="col-md-2 text-center mb-2">
      <%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '150x150' %>
    </div>
    <div class="col-md-10 mb-2">
      <div class="row">
        <div class="col-md-8">
          <h3 class="text-left fw-bold pt-2"><%= current_user.name %></h3>
        </div>
        <div class="col-md-4">
          <div class="row">
            <div class="col-sm-4">
              <p class="text-center fw-semibold pt-2"><%= t('header.follow') %></p>
            </div>
            <div class="col-sm-4">
              <p class="text-center fw-semibold pt-2"><%= t('header.follower') %></p>
            </div>
            <div class="text-center col-sm-4">
              <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-primary rounded-pill' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= User.human_attribute_name(:email) %> :
          <%= current_user.email %>
        </div>
      </div>
      <div class="row">
        <p><%= simple_format(current_user.introduction) %></p>
      </div>
    </div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="post-tab" data-bs-toggle="tab" data-bs-target="#post-tab-pane" type="button" role="tab" aria-controls="post-tab-pane" aria-selected="true"><%= t('.post') %></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="post_question-tab" data-bs-toggle="tab" data-bs-target="#post_question-tab-pane" type="button" role="tab" aria-controls="post_question-tab-pane" aria-selected="false"><%= t('.post_question') %></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="post_comment-tab" data-bs-toggle="tab" data-bs-target="#post_comment-tab-pane" type="button" role="tab" aria-controls="post_comment-tab-pane" aria-selected="false"><%= t('.post_comment') %></button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="post-tab-pane" role="tabpanel" aria-labelledby="post-tab" tabindex="0"><%= render 'my_posts' %></div>
      <div class="tab-pane fade" id="post_question-tab-pane" role="tabpanel" aria-labelledby="post_question-tab" tabindex="0">...</div>
      <div class="tab-pane fade" id="post_comment-tab-pane" role="tabpanel" aria-labelledby="post_comment-tab" tabindex="0">...</div>
    </div>
  </div>
</div>