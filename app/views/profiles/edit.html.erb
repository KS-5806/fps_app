<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <%= render "shared/error_messages", object: f.object %>
          <div class="form-group mb-3">
            <div class='mt-3 mb-3'>
              <%= image_tag @user.avatar.url, id: 'preview', size: '100x100', class: 'rounded-circle' %>
            </div>
            <%= f.label :avatar, placeholder: "image" %>
            <%= f.file_field :avatar, class: "form-control", accept: 'image/*', onchange: 'previewImage()' %>
            <%= f.hidden_field :avatar_cache %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: 'form-control', rows: 10 %>
          </div>
          <%= f.submit  class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag "preview.js" %>